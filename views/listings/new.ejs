<% layout("/layouts/boilerplates") %>
<div class="row">
  <div class="col col-8 offset-2">
    <br /><br />
    <h3>Create New Listing</h3>
    <form
      action="/listings"
      method="post"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-lable">Title:</label>
        <input
          type="text"
          name="listings[title]"
          class="form-control"
          placeholder="Add a catchy title"
          required
        />
        <div class="valid-feedback">Title Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-lable">Description:</label>
        <textarea
          name="listings[description]"
          class="form-control"
          placeholder="Enter description"
          required
        ></textarea>
        <div class="valid-feedback">Description Looks good!</div>
        <div class="invalid-feedback">Please enter a short description!</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-lable">Upload Image:</label>
        <input type="file" name="listings[image]" class="form-control" />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-lable">Price:</label>
          <input
            name="listings[price]"
            class="form-control"
            placeholder="1500"
            required
          />
          <div class="invalid-feedback">Please enter a valid price!</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-lable">Country:</label>
          <input
            type="text"
            name="listings[country]"
            class="form-control"
            placeholder="India"
            required
          />
          <div class="invalid-feedback">Please enter a valid country!</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-lable">Location:</label>
        <input
          type="text"
          name="listings[location]"
          class="form-control"
          placeholder="Ahmedabad, Gujrat"
          required
        />
        <div class="invalid-feedback">Please enter a valid location!</div>
      </div>
      <br /><br />
      <button class="btn btn-dark add-btn">Add</button>
      <br /><br />
    </form>
  </div>
</div>
